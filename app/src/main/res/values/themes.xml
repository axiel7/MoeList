<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorAccent">@color/md_theme_primary</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="Theme.MySplash" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">?android:colorBackground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/colorMoeList</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_splash</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.AppWidget.AppWidgetContainer" parent="BaseTheme" />

    <style name="Widget.AppWidget.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/widget_background</item>
    </style>

</resources>
