<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/materialCardViewStyle"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_horizontal"
    android:minHeight="72dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <FrameLayout
            android:id="@+id/poster_container"
            android:layout_width="110dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/poster"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_gravity="start"
                android:background="@color/colorPlaceHolder"
                android:scaleType="centerCrop"
                android:contentDescription="@string/poster" />
            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="start|bottom"
                android:gravity="center"
                android:background="@drawable/score_background"
                android:text="7"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textSize="14sp"
                tools:ignore="HardcodedText"
                android:drawablePadding="2dp"
                app:drawableEndCompat="@drawable/ic_round_star_24"
                app:drawableTint="?attr/colorOnPrimaryContainer" />

        </FrameLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="8dp"
                android:text="Boku no Pico"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="17sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/media_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_marginTop="8dp"
                android:text="TV â€¢ Airing"
                android:textColor="?attr/colorControlNormal"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="8dp"
                    android:text="5/24"
                    android:textColor="?attr/colorControlNormal"
                    android:textSize="15sp"
                    android:layout_alignParentBottom="true"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_one_button"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/plus_one" />

                <ProgressBar
                    android:id="@+id/episodes_progress"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:progress="50"
                    style="?android:attr/progressBarStyleHorizontal"/>

            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>